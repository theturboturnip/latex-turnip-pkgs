\newcommand{\turnipessay}[2]{%
\begin{titlepage}
    \raggedright%
    \null\vfil
%   \vskip 60\p@
    \begin{center}%
        {\LARGE \@title \par}%
        \vskip 3em%
        {\large
         \lineskip .75em%
          \begin{tabular}[t]{c}%
            \@author
          \end{tabular}\par}%
          \vskip 1.5em%
        {\large \@date \par}%       % Set date in \large size.
        \vskip 1.5em%
        {\large \quickwordcount{#1} \par}%
    \end{center}\par
    \vfil\null
        
    %
    \tableofcontents%
    %
    \vfill\null
    \begin{center}
        \textbf{Word Count Begins on Next Page}
    \end{center}
\end{titlepage}
\pagebreak{}
\input{#1}
\vfill\null
\begin{center}
    \textbf{Word Count Ends Here}
\end{center}
}